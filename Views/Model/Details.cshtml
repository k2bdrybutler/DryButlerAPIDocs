@model DryButlerAPIDocs.Models.DBAPIModel

@{
    ViewBag.Title = "Model Details" + Model.ModelName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-size:22px;padding-top:5px;">Model Details</h2>

<hr style="padding-bottom:10px;" />


<p>
    @if (Model.ModelType != 20)
    {
        <div class="requestdiv">
            <table class="table">

                <tr class="requestmodeltext">
                    <th colspan="7">Request Model</th>
                </tr>
                <tr class="requestpartial">
                    <th colspan="7">@Model.ModelName</th>
                </tr>
                <tr class="requestpartial">
                    <th>Parameter Name</th>
                    <th>Parameter Type</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Value Range/Description</th>
                    <th>Sample Value</th>
                    <th>Required</th>
                </tr>

                @foreach (var item in Model.ModelParameters)
                {
                    <tr class="requestcolomncolor">
                        <td>
                            @Html.DisplayFor(modelItem => item.ParameterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParameterTypeDesc)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ObjectModelID))
                    {
                                @Html.ActionLink(item.ObjectModelName, "Details", "Model", new { id = item.ObjectModelID }, null)
                            }
                            else
                            {
                                <span>{ NULL }</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValueRange)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SampleValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Required)
                        </td>
                    </tr>
                }
            </table>

        </div>
    }
    else if (Model.ModelType == 20)
    {
        <div class="responsediv">
            <table class="table">
                <tr class="responsemodeltext">
                    <th>Response Model</th>
                    <th> </th>
                    <th> </th>
                    <th> </th>
                </tr>
                <tr class="responseepartial">
                    <th>@Model.ModelName</th>
                    <th> </th>
                    <th> </th>
                    <th> </th>
                </tr>
                <tr class="responseepartial">
                    <th>
                        Parameter Name
                    </th>
                    <th>
                        Parameter Type
                    </th>
                    <th>Model</th>
                    <th>Nullable</th>
                </tr>

                @foreach (var item in Model.ModelParameters)
                {
                    <tr class="responsecolomncolor">
                        <td>
                            @Html.DisplayFor(modelItem => item.ParameterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParameterTypeDesc)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ObjectModelID))
                            {
                                @Html.ActionLink(item.ObjectModelName, "Details", "Model", new { id = item.ObjectModelID }, null)
                            }
                            else
                            {
                                <span>{ NULL }</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nullable)
                        </td>
                    </tr>
                }

            </table>
        </div>
    }
    else
    { <h4>No Response</h4> }
</p>


<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</p>
