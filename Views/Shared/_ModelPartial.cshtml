@model DryButlerAPIDocs.Models.Model

<div class="requestdiv">
    <table class="table">

        <tr class="requestmodeltext">
            <th colspan="6">Request Model</th>
        </tr>
        <tr class="requestpartial">
            <th colspan="6">@Model.ModelName</th>
        </tr>
        <tr class="requestpartial">
            <th>
                Parameter Name
            </th>
            <th>
                Parameter Type
            </th>
            <th>Model</th>
            <th>Value Range/Description</th>
            <th>Sample Value</th>
            <th>Required</th>
        </tr>

        @foreach (var item in Model.ModelParameters)
        {
            <tr class="requestcolomncolor">
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter.ParameterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => K2Facade.EnumComboClass.SelectByID(K2Facade.ProjectEnums.PropertyTypes, item.Parameter.ParameterType, 0).DESC)
                </td>
                <td>
                    @if (item.ObjectModelID.HasValue)
                    {
                        @Html.ActionLink(item.ObjectModelName, "Details", "Model", new { id = item.ObjectModelID }, null)
                    }
                    else
                    {
                        <span>{ NULL }</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter.ValueRange)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parameter.SampleValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Required)
                </td>
            </tr>
        }



    </table>

</div>